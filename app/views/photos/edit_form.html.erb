<div class="container">
  <div class="row" style="padding-top:50px">
    <div class="col-md-12">
      <div class="page-header">
        <h1>Update Photo</h1>
      </div>
    </div>
  </div>

  <form class="form-horizontal" role="form" action="http://localhost:3000/update_photo/<%= @this_photo.id %>">
    <div class="form-group">
      <label for="photo_caption" class="col-md-2 control-label">Caption:</label>
        <div class="col-md-10">
          <input id="photo_caption" class="form-control" type="text" name="the_caption" value="<%= @this_photo.caption %>">
        </div>
    </div>
    <div class="form-group">
      <label for="photo_image_url" class="col-md-2 control-label">Image URL:</label>
        <div class="col-md-10">
          <input id="photo_image_url" class="form-control" type="text" name="the_source" value="<%= @this_photo.source %>">
        </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Save Edits</button>
      </div>
    </div>
  </form>
</div>
